{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.textToPublish }}</td>
            </tr>
            <tr>
                <th>ScheduleDate</th>
                <td>{{ post.scheduleDate ? post.scheduleDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

<div class="row">
    <h4>opções</h4>


    {% for image in images %}
        <div class="mb-3 col-3">
        <a href="{{ path('app_admin_post_set_image',{'id':post.id,'url':image.urls.raw}) }}"><img class="w-100" src="{{ image.urls.raw }}"></a>
        </div>
    {% endfor %}
</div>
{% endblock %}
