    <div class="mb-3 col-12">
        <label for="{{ form.createdBy.vars.id }}" class="form-label">Criado Por</label>
        {{ form_widget(form.createdBy, {'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.createdBy) }}
    </div>
    <div class="mb-3 col-12">
        <label for="{{ form.approvedBy.vars.id }}" class="form-label">Aprovado Por</label>
        {{ form_widget(form.approvedBy, {'attr':{'class':'form-control'}}) }}
        {{ form_errors(form.approvedBy) }}
    </div>
