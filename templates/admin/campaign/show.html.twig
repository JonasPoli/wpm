{% extends 'base.html.twig' %}

{% block title %}Campaign{% endblock %}

{% block body %}
    <h1>Campaign</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campaign.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ campaign.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ campaign.description }}</td>
            </tr>
            <tr>
                <th>StardDate</th>
                <td>{{ campaign.stardDate ? campaign.stardDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ campaign.endDate ? campaign.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>BaseArt</th>
                <td>{{ campaign.baseArt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_campaign_index') }}">back to list</a>

    <a href="{{ path('app_admin_campaign_edit', {'id': campaign.id}) }}">edit</a>

    {{ include('admin/campaign/_delete_form.html.twig') }}
{% endblock %}
