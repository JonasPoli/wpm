{{ form_start(form) }}
<div class="row">
    <div class="mb-3 col-12">
        <label for="{{ form.name.vars.id }}" class="form-label">Nome</label>
        {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
    </div>
    <div class="mb-3 col-12">
        <label for="{{ form.description.vars.id }}" class="form-label">Descrição</label>
        {{ form_widget(form.description, {'attr':{'class':'form-control'}}) }}
    </div>
    <div class="mb-3 col-12">
        <label for="{{ form.stardDate.vars.id }}" class="form-label">Data De Início</label>
        {{ form_widget(form.stardDate, {'attr':{'class':'form-control'}}) }}
    </div>
    <div class="mb-3 col-12">
        <label for="{{ form.endDate.vars.id }}" class="form-label">Data De Término</label>
        {{ form_widget(form.endDate, {'attr':{'class':'form-control'}}) }}
    </div>
    <div class="mb-3 col-12">
        <label for="{{ form.postingTime.vars.id }}" class="form-label">Hora da postagem</label>
        {{ form_widget(form.postingTime, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col-12">
        <label for="{{ form.client.vars.id }}" class="form-label">Cliente</label>
        {{ form_widget(form.client, {'attr':{'class':'form-control'}}) }}
    </div>

    <div class="mb-3 col-12">

        <h4>Banner</h4>
        <p>Dados da estrutura da imagem principal</p>
        <div class="mb-3 col-6">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="64" height="64">
                <rect x="12" y="20" width="40" height="32" stroke="black" fill="none" stroke-width="2"/>
                <line x1="12" y1="20" x2="52" y2="20" stroke="black" stroke-width="2"/>
                <polygon points="32,8 28,12 32,16 36,12" fill="black"/>
            </svg>
            <label for="{{ form.bannerHeight.vars.id }}" class="form-label">Recuo Superior</label><br>
            <small>É o espaço que se deve dar acima das imagem que vão ficar abaixo da máscara.</small>
            {{ form_widget(form.bannerHeight, {'attr':{'class':'form-control'}}) }}
        </div>

        <div class="mb-3 col-6">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 64 64" width="64" height="64">
                <rect x="20" y="12" width="32" height="40" stroke="black" fill="none" stroke-width="2"/>
                <line x1="20" y1="12" x2="20" y2="52" stroke="black" stroke-width="2"/>
                <polygon points="8,32 12,28 16,32 12,36" fill="black"/>
            </svg>
            <label for="{{ form.bannerWidth.vars.id }}" class="form-label">Recuo Esquerdo</label><br>
            <small>É o espaço que se deve dar à esquerda das imagem que vão ficar abaixo da máscara.</small>
            {{ form_widget(form.bannerWidth, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="mb-3 col-12">
            <label for="{{ form.baseArtFile.vars.id }}" class="form-label">Arte Base</label>
            {{ form_widget(form.baseArtFile, {'attr':{'class':'form-control'}}) }}


            {% if campaign.baseArtFile is not empty %}
                <img class="mt-3" src="{{ vich_uploader_asset(campaign,'baseArtFile') }}" width="150" />
            {% endif %}

        </div>


    </div>

</div>
<button class="btn btn-info text-white float-start mt-3">Salvar</button>
{{ form_end(form) }}