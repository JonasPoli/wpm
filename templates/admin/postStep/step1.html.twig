{% extends 'base.html.twig' %}

{% block body %}
    <h1>Escolha o cliente</h1>
    <form method="get" action="{{ path('post_step_new', {step: 2}) }}">
        {% for client in clients %}
            <input type="radio" id="client_{{ client.id }}" name="client_id" value="{{ client.id }}">
            <label for="client_{{ client.id }}">
                {% if client.logoFile is not empty %}
                    <img src="{{ vich_uploader_asset(client,'logoFile') }}" width="75">
                {% endif %}
                      {{ client.name }}
            </label><br>
            <hr>
        {% endfor %}
        <button class="btn btn-success text-white" type="submit">Continuar</button>
    </form>
{% endblock %}
